<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\MessageQueue\Consumer\Config\Data">
        <plugin name="queueConfigPlugin" type="Magento\Framework\MessageQueue\Config\ConsumerConfigPlugin" />
    </type>
    <type name="Magento\Framework\MessageQueue\Publisher\Config\Data">
        <plugin name="queueConfigPlugin" type="Magento\Framework\MessageQueue\Config\PublisherConfigPlugin" />
    </type>
    <type name="Magento\Framework\MessageQueue\QueueRepository">
        <arguments>
            <argument name="queues" xsi:type="array">
                <item name="amqp" xsi:type="string">Magento\Amqp\Model\Queue</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\MessageQueue\ExchangeRepository">
        <arguments>
            <argument name="exchanges" xsi:type="array">
                <item name="amqp" xsi:type="string">Magento\Amqp\Model\Exchange</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\MessageQueue\PublisherPool">
        <arguments>
            <argument name="publishers" xsi:type="array">
                <item name="async" xsi:type="array">
                    <item name="amqp" xsi:type="array">
                        <item name="type" xsi:type="object">Magento\Framework\MessageQueue\Publisher</item>
                        <item name="connectionName" xsi:type="string">amqp</item>
                    </item>
                </item>
                <item name="sync" xsi:type="array">
                    <item name="amqp" xsi:type="array">
                        <item name="type" xsi:type="object">Magento\Framework\MessageQueue\Rpc\Publisher</item>
                        <item name="connectionName" xsi:type="string">amqp</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>
    <preference for="Magento\Amqp\Model\Topology\BindingInstallerInterface" type="Magento\Amqp\Model\Topology\BindingInstaller" />
    <type name="Magento\Amqp\Model\Topology\BindingInstaller">
        <arguments>
            <argument name="installers" xsi:type="array">
                <item name="queue" xsi:type="object">Magento\Amqp\Model\Topology\BindingInstallerType\Queue</item>
                <item name="exchange" xsi:type="object">Magento\Amqp\Model\Topology\BindingInstallerType\Exchange</item>
            </argument>
        </arguments>
    </type>
</config>

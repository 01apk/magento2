      <data name="product/data/category">category_%isolation%</data>
      <data name="product/data/description">-</data>
      <data name="product/data/associated/products">catalogProductSimple::simple_for_composite_products,catalogProductSimple::simple_for_composite_products</data>
      <data name="product/data/associated/preset">defaultSimpleProduct</data>
      <data name="product/data/short_description">-</data>
      <data name="isRequired">No</data>
      <constraint name="assertProductOutOfStock"/>
    </variation>

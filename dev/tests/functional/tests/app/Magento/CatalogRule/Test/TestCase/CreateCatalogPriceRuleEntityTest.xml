<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/etc/global/variations.xsd">
  <testCase name="CreateCatalogPriceRuleEntityTest">
    <variation name="CreateCatalogPriceRuleEntityTestVariation1" firstConstraint="assertCatalogPriceRuleSuccessSaveMessage" method="test">
      <data name="catalogPriceRule/data/name">CatalogPriceRule %isolation%</data>
      <data name="catalogPriceRule/data/description">Catalog Price Rule Description</data>
      <data name="catalogPriceRule/data/is_active">Active</data>
      <data name="catalogPriceRule/data/website_ids/option_0">Main Website</data>
      <data name="catalogPriceRule/data/customer_group_ids/option_0">Wholesale</data>
      <data name="catalogPriceRule/data/condition">-</data>
      <data name="catalogPriceRule/data/simple_action">By Percentage of the Original Price</data>
      <data name="catalogPriceRule/data/discount_amount">50</data>
      <constraint name="assertCatalogPriceRuleSuccessSaveMessage" next="assertCatalogPriceRuleNoticeMessage"/>
      <constraint name="assertCatalogPriceRuleNoticeMessage" next="assertCatalogPriceRuleForm" prev="assertCatalogPriceRuleSuccessSaveMessage"/>
      <constraint name="assertCatalogPriceRuleForm" next="assertCatalogPriceRuleInGrid" prev="assertCatalogPriceRuleNoticeMessage"/>
      <constraint name="assertCatalogPriceRuleInGrid" prev="assertCatalogPriceRuleForm"/>
    </variation>
    <variation name="CreateCatalogPriceRuleEntityTestVariation2" firstConstraint="assertCatalogPriceRuleSuccessSaveMessage" method="test">
      <data name="catalogPriceRule/data/name">CatalogPriceRule %isolation%</data>
      <data name="catalogPriceRule/data/description">Catalog Price Rule Description</data>
      <data name="catalogPriceRule/data/is_active">Inactive</data>
      <data name="catalogPriceRule/data/website_ids/option_0">Main Website</data>
      <data name="catalogPriceRule/data/customer_group_ids/option_0">General</data>
      <data name="catalogPriceRule/data/condition">-</data>
      <data name="catalogPriceRule/data/simple_action">By Fixed Amount</data>
      <data name="catalogPriceRule/data/discount_amount">10</data>
      <constraint name="assertCatalogPriceRuleSuccessSaveMessage" next="assertCatalogPriceRuleNoticeMessage"/>
      <constraint name="assertCatalogPriceRuleNoticeMessage" next="assertCatalogPriceRuleForm" prev="assertCatalogPriceRuleSuccessSaveMessage"/>
      <constraint name="assertCatalogPriceRuleForm" next="assertCatalogPriceRuleInGrid" prev="assertCatalogPriceRuleNoticeMessage"/>
      <constraint name="assertCatalogPriceRuleInGrid" prev="assertCatalogPriceRuleForm"/>
    </variation>
  </testCase>
</config>

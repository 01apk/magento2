      <data name="payment/method" xsi:type="string">checkmo</data>
      <constraint name="assertTermRequireMessageOnMultishippingCheckout" next="assertOrderSuccessPlacedMessage"/>
      <constraint name="assertOrderSuccessPlacedMessage" prev="assertTermRequireMessageOnMultishippingCheckout"/>
    </variation>
  </testCase>
</config>

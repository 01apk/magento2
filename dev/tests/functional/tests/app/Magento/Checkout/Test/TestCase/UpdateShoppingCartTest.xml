<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/etc/global/variations.xsd">
  <testCase name="UpdateShoppingCartTest">
    <variation name="UpdateShoppingCartTestVariation1" firstConstraint="assertPriceInShoppingCart" method="test">
      <data name="product/dataSet">default</data>
      <data name="product/data/price/value">100</data>
      <data name="product/data/checkout_data/qty">3</data>
      <data name="product/data/checkout_data/cartItem/price">100</data>
      <data name="product/data/checkout_data/cartItem/subtotal">300</data>
      <constraint name="assertPriceInShoppingCart" next="assertProductQtyInShoppingCart"/>
      <constraint name="assertProductQtyInShoppingCart" next="assertProductQtyInMiniShoppingCart" prev="assertPriceInShoppingCart"/>
      <constraint name="assertProductQtyInMiniShoppingCart" next="assertSubtotalInShoppingCart" prev="assertProductQtyInShoppingCart"/>
      <constraint name="assertSubtotalInShoppingCart" prev="assertProductQtyInMiniShoppingCart"/>
    </variation>
    <variation name="UpdateShoppingCartTestVariation2" firstConstraint="assertPriceInShoppingCart" method="test">
      <data name="product/dataSet">with_two_custom_option</data>
      <data name="product/data/price/value">50</data>
      <data name="product/data/checkout_data/qty">11</data>
      <data name="product/data/checkout_data/cartItem/price">65</data>
      <data name="product/data/checkout_data/cartItem/subtotal">715</data>
      <constraint name="assertPriceInShoppingCart" next="assertProductQtyInShoppingCart"/>
      <constraint name="assertProductQtyInShoppingCart" next="assertProductQtyInMiniShoppingCart" prev="assertPriceInShoppingCart"/>
      <constraint name="assertProductQtyInMiniShoppingCart" next="assertSubtotalInShoppingCart" prev="assertProductQtyInShoppingCart"/>
      <constraint name="assertSubtotalInShoppingCart" prev="assertProductQtyInMiniShoppingCart"/>
    </variation>
  </testCase>
</config>

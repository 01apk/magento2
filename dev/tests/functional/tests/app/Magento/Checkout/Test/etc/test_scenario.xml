<?xml version="1.0"?>
<scenarios xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/Mtf/Config/etc/test_scenario.xsd">
  <scenario name="OnePageCheckoutTest" firstStep="setupConfiguration">
    <step name="setupConfiguration" next="createProducts"/>
    <step name="createProducts" next="addProductsToTheCart"/>
    <step name="addProductsToTheCart" next="proceedToCheckout"/>
    <step name="proceedToCheckout" next="selectCheckoutMethod"/>
    <step name="createCustomer" next="selectCheckoutMethod"/>
    <step name="selectCheckoutMethod" next="fillBillingInformation"/>
    <step name="fillBillingInformation" next="fillShippingMethod"/>
    <step name="fillShippingMethod" next="selectPaymentMethod"/>
    <step name="selectPaymentMethod" next="placeOrder"/>
    <step name="placeOrder"/>
  </scenario>
</scenarios>

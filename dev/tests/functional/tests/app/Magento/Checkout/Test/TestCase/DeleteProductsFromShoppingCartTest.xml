      <constraint name="Magento\Checkout\Test\Constraint\AssertCartIsEmpty"/>
    </variation>
    <variation name="DeleteProductsFromShoppingCartTestVariation3" firstConstraint="assertCartIsEmpty" method="test">
      <data name="productsData" xsi:type="string">catalogProductSimple::with_two_custom_option</data>
      <constraint name="Magento\Checkout\Test\Constraint\AssertCartIsEmpty"/>
    </variation>
    <variation name="DeleteProductsFromShoppingCartTestVariation4" firstConstraint="assertCartIsEmpty" method="test">
      <data name="productsData" xsi:type="string">catalogProductVirtual::50_dollar_product</data>
      <constraint name="Magento\Checkout\Test\Constraint\AssertCartIsEmpty"/>
    </variation>
    <variation name="DeleteProductsFromShoppingCartTestVariation5" firstConstraint="assertCartIsEmpty" method="test">
      <data name="productsData" xsi:type="string">configurableProductInjectable::default</data>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../etc/global/variations.xsd">
    <testCase name="ChangeCustomerPasswordTest">
        <variation name="ChangeCustomerPasswordTestVariation1">
            <data name="initialCustomer/dataSet">default</data>
            <data name="customer/data/current_password">123123q</data>
            <data name="customer/data/password">123123a</data>
            <data name="customer/data/password_confirmation">123123a</data>
            <data name="constraint">assertCustomerInfoSuccessSavedMessage, assertCustomerPasswordChanged</data>
        </variation>
        <variation name="ChangeCustomerPasswordTestVariation2">
            <data name="initialCustomer/dataSet">default</data>
            <data name="customer/data/current_password">123123</data>
            <data name="customer/data/password">123123a</data>
            <data name="customer/data/password_confirmation">123123a</data>
            <data name="constraint">assertChangePasswordFailMessage</data>
        </variation>
        <variation name="ChangeCustomerPasswordTestVariation3">
            <data name="initialCustomer/dataSet">default</data>
            <data name="customer/data/current_password">123123q</data>
            <data name="customer/data/password">123123a</data>
            <data name="customer/data/password_confirmation">123123</data>
            <data name="constraint">assertWrongPassConfirmationMessage</data>
        </variation>
    </testCase>
</config>

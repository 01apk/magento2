<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../etc/global/variations.xsd">
    <testCase name="CheckoutWithGiftMessagesTest">
        <variation name="CheckoutWithGiftMessagesTestVariation1">
            <data name="products">catalogProductSimple::default, catalogProductVirtual::default</data>
            <data name="customer/dataSet">customer_US</data>
            <data name="billingAddress/dataSet">customer_US</data>
            <data name="checkoutMethod">login</data>
            <data name="shipping/shipping_service">Flat Rate</data>
            <data name="shipping/shipping_method">Fixed</data>
            <data name="giftMessage/data/allow_gift_options">Yes</data>
            <data name="giftMessage/data/allow_gift_messages_for_order">Yes</data>
            <data name="giftMessage/data/allow_gift_options_for_items">-</data>
            <data name="giftMessage/data/sender">John Doe</data>
            <data name="giftMessage/data/recipient">Jane Doe</data>
            <data name="giftMessage/data/message">text_gift_message</data>
            <data name="payment/method">cashondelivery</data>
            <data name="constraint">assertOrderSuccessPlacedMessage, assertGiftMessageInFrontendOrder</data>
            <data name="issue">Bug: MAGETWO-33079</data>
        </variation>
        <variation name="CheckoutWithGiftMessagesTestVariation2">
            <data name="products">catalogProductSimple::default, catalogProductVirtual::default</data>
            <data name="customer/dataSet">customer_US</data>
            <data name="billingAddress/dataSet">customer_US</data>
            <data name="checkoutMethod">login</data>
            <data name="shipping/shipping_service">Flat Rate</data>
            <data name="shipping/shipping_method">Fixed</data>
            <data name="giftMessage/data/allow_gift_options">Yes</data>
            <data name="giftMessage/data/allow_gift_messages_for_order">-</data>
            <data name="giftMessage/data/allow_gift_options_for_items">Yes</data>
            <data name="giftMessage/data/sender">John Doe</data>
            <data name="giftMessage/data/recipient">Jane Doe</data>
            <data name="giftMessage/data/message">text_gift_message</data>
            <data name="payment/method">cashondelivery</data>
            <data name="constraint">assertOrderSuccessPlacedMessage, assertGiftMessageInFrontendOrderItems</data>
        </variation>
    </testCase>
</config>

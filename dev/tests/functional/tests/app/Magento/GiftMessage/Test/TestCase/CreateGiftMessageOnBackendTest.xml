      <data name="giftMessage/data/recipient" xsi:type="string">Jane Doe</data>
      <data name="giftMessage/data/message" xsi:type="string">text_gift_message</data>
      <data name="giftMessage/data/items/dataSets" xsi:type="string">default, default</data>
      <data name="payment/method" xsi:type="string">cashondelivery</data>
      <constraint name="assertOrderSuccessCreateMessage" next="assertGiftMessageInBackendOrder"/>
      <constraint name="assertGiftMessageInBackendOrder" next="assertGiftMessageInFrontendOrder" prev="assertOrderSuccessCreateMessage"/>
      <constraint name="assertGiftMessageInFrontendOrder" next="assertGiftMessageInFrontendOrderItems" prev="assertGiftMessageInBackendOrder"/>

/**
 * @var $this \Magento\Theme\Block\Html\Title
 */
$cssClass = $this->getCssClass() ? ' ' . $this->getCssClass() : '';
$title = '';
if (trim($this->getPageTitle())) {
    $title = '<span class="base" data-ui-id="page-title" ' .  $this->getAddBaseAttribute() . '>' . $this->escapeHtml($this->getPageTitle()) . '</span>';
}
?>
<?php if ($title): ?>
<div class="page-title<?php echo $cssClass; ?>">
    <h1 class="title"
        <?php if ($this->getId()): ?>id="<?php echo $this->getId(); ?>"<?php endif; ?>
        tabindex="0"
        <?php echo $this->getAddBaseAttributeAria(); ?>>
            <?php echo $title ?>
    </h1>
    <?php echo $this->getChildHtml(); ?>
</div>
<?php endif; ?>

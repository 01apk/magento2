<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="FillAdminGroupedProductFormActionGroup">
        <annotations>
            <description>Fills in the provided Product Name and Category on the Grouped Product creation/edit page.</description>
        </annotations>
        <arguments>
            <argument name="product" defaultValue="GroupedProduct"/>
            <argument name="categoryName"/>
        </arguments>
        <fillField selector="{{AdminProductFormSection.productName}}" userInput="{{product.name}}" stepKey="fillProductName"/>
        <searchAndMultiSelectOption selector="{{AdminProductFormSection.categoriesDropdown}}" parameterArray="[{{categoryName}}]" stepKey="selectCategory"/>
    </actionGroup>
</actionGroups>

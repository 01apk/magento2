/** @var \Magento\GoogleGtag\Block\Code $block */
/** @var \Magento\Framework\Escaper $escaper */
/** @var \Magento\GoogleGtag\Helper\GtagConfiguration $gtagConfiguration */
$gtagConfiguration = $block->getHelper();
?>

<?php if ($gtagConfiguration->isGoogleAdwordsConfigurable() && $gtagConfiguration->isGoogleAdwordsActive()): ?>
    <?php $conversionId = $gtagConfiguration->getConversionId(); ?>
    <?php $gtagSiteSrc = $gtagConfiguration->getConversionGtagGlobalSiteTagSrc(); ?>
    <script>
        if (!!window.gtag) {
          // Inject Global Site Tag
          var gtagScript = document.createElement('script');
          gtagScript.type = 'text/javascript';
          gtagScript.async = true;
          gtagScript.src = '<?= $block->escapeHtml($gtagSiteSrc) ?>';
          document.head.appendChild(gtagScript);

          window.dataLayer = window.dataLayer || [];

          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('set', 'developer_id.dYjhlMD', true);
        } else {
          gtag('config', '<?= $block->escapeHtml($conversionId) ?>');
        }
      </script>
<?php endif ?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\QuoteGraphQl\Model\Resolver\SetPaymentMethodOnCart">
        <plugin name="paypal_express_payment_method" type="Magento\PaypalGraphQl\Model\Plugin\Resolver\SetPaymentMethodOnCart"/>
    </type>
    <type name="Magento\PaypalGraphQl\Model\PaypalConfigProvider">
        <arguments>
            <argument name="configurations" xsi:type="array">
                <item name="paypal_express" xsi:type="array">
                    <item name="configType" xsi:type="string">\Magento\Paypal\Model\Config</item>
                    <item name="configMethod" xsi:type="const">\Magento\Paypal\Model\Config::METHOD_WPP_EXPRESS</item>
                    <item name="checkoutType" xsi:type="string">\Magento\Paypal\Model\Express\Checkout</item>
                </item>
                <item name="payflow_express" xsi:type="array">
                    <item name="configType" xsi:type="string">\Magento\Paypal\Model\Config</item>
                    <item name="configMethod" xsi:type="const">\Magento\Paypal\Model\Config::METHOD_WPP_PE_EXPRESS</item>
                    <item name="checkoutType" xsi:type="string">\Magento\Paypal\Model\PayflowExpress\Checkout</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>

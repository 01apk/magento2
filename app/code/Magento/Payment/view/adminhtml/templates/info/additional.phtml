<?php if ($additional_info = $block->getAdditionalInfo()):?>
        <?php foreach ($additional_info as $label => $value):?>
            <?php if (is_array($value)):?>
                <b><?php echo $block->escapeHtml($label)?>:</b><br/>
                <?php foreach ($value as $label => $val):?>
                    &nbsp;&nbsp;-&nbsp;<U><?php echo $block->escapeHtml($label)?></U>:&nbsp;<?php echo $block->escapeHtml($val)?><br/>
                <?php endforeach;?>
            <?php else:?>
                <b><?php echo $block->escapeHtml($label)?>:&nbsp;</b><?php echo $block->escapeHtml($value)?><br/>
            <?php endif;?>
        <?php endforeach; ?>
<?php endif;?>

<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="CatalogSelectCustomerGroupActionGroup">
        <arguments>
            <argument name="customer" defaultValue="NOT LOGGED IN" type="entity"/>
        </arguments>
        <selectOption selector="{{AdminNewCatalogPriceRule.customerGroups}}" userInput="{{customer}}" stepKey="selectCustomerGroup"/>
    </actionGroup>
</actionGroups>
